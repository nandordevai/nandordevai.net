{% extends '_layouts/base.njk' %}

{% block head %}
<link rel="stylesheet" href="/css/page.css">
<script src="/js/p5.min.js"></script>
<script src="/js/sketch.js" defer></script>
<script src="/js/gallery.js" defer></script>
    {% block pagehead %}
    {% endblock %}
{% endblock %}

{% block header %}
    {% include 'menu.njk' %}
{% endblock %}

{% block sketch %}
    <canvas id="p5canvas"></canvas>
    <div class="canvas-overlay"></div>
{% endblock %}

{% block content %}
    <h1>{{ title }}</h1>
    {{ content | safe }}
    {% if not tags.includes('hide-gallery') %}
        {% gallery %}
    {% endif %}
{% endblock %}

{% block footer %}
    <a href="https://www.linkedin.com/in/nandordevai/"><img src="/img/linkedin.svg"></a>
    <a href="https://mstdn.plus/@nandordevai"><img src="/img/mastodon.svg"></a>
{% endblock %}